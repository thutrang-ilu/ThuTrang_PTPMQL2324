@model IEnumerable<DemoMVC.Models.Faculty>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Khoa</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FacultyID">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.FacultyID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.FacultyID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
